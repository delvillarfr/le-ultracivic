# =============================================================================
# ULTRA CIVIC - LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# This file contains working values for local development
# Copy this to .env for quick local setup
# 
# FOR DEVELOPMENT ONLY - NOT FOR PRODUCTION USE
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local PostgreSQL database
DATABASE_URL=postgresql+asyncpg://ultracivic:ultracivic@localhost:5432/ultracivic_dev

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Enable debug mode for development
DEBUG=true

# =============================================================================
# BLOCKCHAIN & WEB3 CONFIGURATION
# =============================================================================
# Test Alchemy API key (replace with your actual key)
ALCHEMY_API_KEY=demo_key_replace_with_real_key
ALCHEMY_SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/demo_key_replace_with_real_key

# Test Thirdweb secret key (replace with your actual key)
THIRDWEB_SECRET_KEY=demo_key_replace_with_real_key

# Test treasury wallet address (replace with your actual address)
TREASURY_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b8D11D2D7D2AE30B2B

# Test $PR token contract address (replace with your actual address)
PR_TOKEN_CONTRACT_ADDRESS=0x742d35Cc6634C0532925a3b8D11D2D7D2AE30B2B

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Test Resend API key (replace with your actual key)
RESEND_API_KEY=demo_key_replace_with_real_key

# Development alert email
ALERT_EMAIL=dev@ultracivic.com

# =============================================================================
# API & SECURITY CONFIGURATION
# =============================================================================
# Local frontend URL
FRONTEND_URL=http://localhost:3000

# Higher rate limit for development
RATE_LIMIT_REQUESTS=100

# =============================================================================
# TRANSACTION MONITORING
# =============================================================================
# Shorter timeouts for development
TX_TIMEOUT_MINUTES=2
RESERVATION_TIMEOUT_MINUTES=10

# =============================================================================
# PRICING CONFIGURATION
# =============================================================================
# Test pricing
ALLOWANCE_PRICE_USD=1.0

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# 1inch API for Sepolia testnet
ONEINCH_API_URL=https://api.1inch.io/v5.0/11155111

# =============================================================================
# PRODUCTION-SPECIFIC CONFIGURATION
# =============================================================================
# Debug logging for development
LOG_LEVEL=DEBUG

# Smaller pool for development
DB_POOL_SIZE=5

# Enable audit logging
AUDIT_LOGGING_ENABLED=true

# No Sentry in development
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT-SPECIFIC CONFIGURATION
# =============================================================================
# Show SQL queries in development
DB_ECHO_QUERIES=true

# Allow CORS from any origin in development
CORS_ALLOW_ALL_ORIGINS=true